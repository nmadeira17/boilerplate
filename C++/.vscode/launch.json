{
    "version": "0.1.0",
    "configurations": [
        {
            "name": "clang++ - Build and debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/main.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "clang++ build",
            "miDebuggerPath": "/usr/bin/lldb-mi"
        }
    ]
}